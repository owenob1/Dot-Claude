{
    "hooks": {
      "SessionStart": [
        {
          "matcher": "startup",
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-start.sh",
              "timeout": 60
            }
          ]
        }
      ],
      "SessionEnd": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-end.sh",
              "timeout": 30
            }
          ]
        }
      ],
      "UserPromptSubmit": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/user-prompt-submit.sh",
              "timeout": 10
            }
          ]
        }
      ],
      "PreToolUse": [
        {
          "matcher": ".*",
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-tool-use.sh",
              "timeout": 5
            }
          ]
        }
      ],
      "PostToolUse": [
        {
          "matcher": "Write|Edit",
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/format-file.sh",
              "timeout": 30
            }
          ]
        }
      ],
      "Stop": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/stop.sh",
              "timeout": 30
            }
          ]
        }
      ],
      "SubagentStop": [
        {
          "hooks": [
            {
              "type": "prompt",
              "prompt": "Evaluate if this subagent completed its task. Input: $ARGUMENTS\n\nCheck:\n1. Task completion status\n2. Any errors or failures\n3. Need for additional work\n\nReturn: {\"decision\": \"approve\" or \"block\", \"reason\": \"explanation\"}"
            }
          ]
        }
      ],
      "PreCompact": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/pre-compact.sh",
              "timeout": 10
            }
          ]
        }
      ],
      "Notification": [
        {
          "hooks": [
            {
              "type": "command",
              "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/notification.sh",
              "timeout": 5
            }
          ]
        }
      ]
    },
    "network": {
      "allowlist": [
        "registry.npmjs.org",
        "mcp.context7.com",
        "*.github.com",
        "github.com"
      ]
    }
  }
  